# ===================================
# API Keys (REQUIRED)
# ===================================
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get OpenWeather API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Optional: Data.gov.in API for real market data
DATA_GOV_IN_API_KEY=your_data_gov_in_api_key_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/agridb

# ===================================
# Security Configuration (CRITICAL!)
# ===================================
# Generate a secure SECRET_KEY with:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=REPLACE_WITH_SECURE_KEY_MINIMUM_32_CHARACTERS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
# Choose ONE method: SendGrid OR SMTP

# Method 1: SendGrid (Recommended for production)
# Get free API key at: https://sendgrid.com (100 emails/day free)
EMAIL_ENABLED=false
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Method 2: SMTP (Gmail, Outlook, Custom SMTP)
# For Gmail: Use App Password (not your regular password)
# Guide: https://support.google.com/accounts/answer/185833
# EMAIL_ENABLED=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password-here
# SMTP_FROM_EMAIL=your-email@gmail.com
# SMTP_FROM_NAME=AgriAI Platform

# CORS
FRONTEND_URL=http://localhost:5173

# OAuth - Google Login
# Get credentials at: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID
# 2. Add Authorized redirect URI: http://localhost:5173/auth/google/success
# 3. Copy Client ID and Secret below
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# Environment
ENVIRONMENT=development
